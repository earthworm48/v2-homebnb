<div class='modal fade' id="log_in_modal" role='dialog'>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-body'>
        <div class="panel-padding panel-body">
          
          <%= link_to 'Log In With Facebook', '/auth/facebook',class:"btn btn-primary btn-fb btn-block fb-popup", "data-dismiss" => "modal" %>
          <hr>
           <%= form_for :session, url: sessions_path do |form| %>  
            <div class="form-group">
              <%= form.text_field :email, type: 'email',placeholder:"Email address" ,style:"width:100%;"%>
            </div>
            <div class="form-group">
               <%= form.password_field :password, placeholder:"Password", style:"width:100%;"%>
               <div class="help-block text-right"><a href="">Forget the password ?</a></div>
            </div>
            <div class="form-group">
               <button type="submit" class="btn btn-primary btn-block">Sign in</button>
            </div>
            <div class="checkbox">
             <label>
             <input type="checkbox"> keep me logged-in
             </label>
            </div>
          <%end%>
          <hr>
          Don't have an account? <%=link_to 'Sign up', '#sign_up_modal', "data-toggle" =>'modal',"data-dismiss" => "modal"%>
        </div>
      </div>
    </div>
  </div>
</div>
