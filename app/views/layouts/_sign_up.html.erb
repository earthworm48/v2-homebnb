<div class="modal fade" id="sign_up_modal" role='dialog'>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <div class="panel-padding panel-body">

         <%= link_to 'Sign Up With Facebook', '/auth/facebook',class:"btn btn-primary btn-fb btn-block fb-popup", "data-dismiss" => "modal" %>

          <hr>

            <%= form_for User.new do |form|%>
              <div class="form-group">
                <%= form.text_field :name, placeholder:"Name", style:"width:100%;" %>
              </div>         
              <div class="form-group">
                <%= form.text_field :email, type: 'email', placeholder:"Email", style:"width:100%;" %>
              </div>

              <div class="form-group">
                <%= form.password_field :password, placeholder:"Password", style:"width:100%;" %>
              </div>
              <div class="form-group">
               <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
              </div>
            <% end %>

        </div>
      </div>
    </div>
  </div>
</div>