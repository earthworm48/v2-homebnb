<div class="container">

<h1>Edit Your Booking</h1>

<%= form_for @booking do |f| %>  
	<div class="form-group">
	  <%= f.label :start_date %><br>
	  <%= f.text_field :start_date %>
	</div>
	<div class="form-group">
	  <%= f.label :end_date %><br>
	  <%= f.text_field :end_date %>
	</div>
	<div class="form-group">
	  <%= f.label :no_of_guest %><br>
	  <%= f.select :no_of_guest, (1..16), :style => "width:100%;"%>
	</div>

  <%=f.hidden_field :amount, :value => @booking.listing.price_per_night %>

<div id="dropin">
</div>

<div class="container">
	<div id="payment-form">
	</div>
</div>

<%= f.submit "Edit Your Booking!", class:"btn btn-default" %>
<% end %>
</div>